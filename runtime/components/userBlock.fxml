        <Pane AnchorPane.leftAnchor="70.0">
            <children>
                <Text id="welcome_servmenu" strokeType="OUTSIDE" strokeWidth="0.0" text="Добро пожаловать," layoutY="25" />
                <!-- Никнейм игрока -->
                <Label id="nickname" prefHeight="26.0" text="PLAYER123" layoutY="32" />
                <!-- Счет игрока -->
                <Label id="role">
                    <!-- <tooltip><Tooltip anchorLocation="WINDOW_BOTTOM_LEFT" text="%runtime.scenes.servermenu.moneyTooltip" /></tooltip> -->
                </Label>
            </children>
        </Pane>
    </children>
</AnchorPane>
